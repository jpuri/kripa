<div align="center">
  <form id="updateForm">
  <%= render 'form' %>
  <div style="padding-top: 25%;padding-left: 35%;">
	<a onclick="Make.updateEntity(<%= @make.id%>)" class="button_link"><font color="#EFFBFE">Save</a>
	<img id="spinner_update" style="display:none;" src="/images/spinner.gif"/>
	<a onclick="Make.closeDialog('dialog_update');" class="button_link"><font color="#EFFBFE">Cancel</a></div>
  	<input type="hidden" value="<%= @make.id%>" id="id" name="id">
  </div>
</form>
</div>
