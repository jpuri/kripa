<h1>List Models</h1>

<table class="borderedTable">
  <tr>
    <th>S. No.</th>
    <th>Model #</th>
    <th>Description</th>
  </tr>

  <% i = 1 %>

  <% for model in @models %>
  <tr onclick="openPage('models', <%= model.id %>)">
    <td><%= i %></td>
    <td><%= model.number %></td>
    <td><%= model.description %></td>
  </tr>
  <% i = i + 1 %>
  <% end %>

</table>

<br/>

<%= link_to 'New Model', new_model_path %>
