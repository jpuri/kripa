<div style="position:absolute; padding-right: 10%" width="50%">
	<table class="borderedTable">
	  <tr>
	    <th width="7%">S. No.</th>
	    <th width="13%"><a class="sortable sort_default" name="model">Model</a></th>
	    <th width="13%"><a class="sortable sort_default" name="part_number">Part Number</a></th>
	    <th width="25%"><a class="sortable sort_default" name="part_desc">Part Description</a></th>
	    <th width="10%"><a class="sortable sort_default" name="weight">Weight(Kg)</a></th>
	    <th width="10%"><a class="sortable sort_default" name="price">Price(<%= @currency %>)</a></th>
	    <th width="7%" class="admin_action">Action</th>
	  </tr>
	  <tr id="createNewRow"/>
	  <% i = 1 %>
	
	  <%if @part_prices.length > 0%>
		  <% for part_price in @part_prices %>
	  	  <tr id="<%= 'part_prices_' + String(part_price.id) %>">
		    <td><%= i %></td>
		    <td><%= part_price.model %></td>
		    <td><%= part_price.part_number %></td>
		    <td><%= part_price.part_desc %></td>
		    <td><%= number_with_precision(part_price.weight , :precision => 2)%></td>
		    <td><%= number_with_precision(part_price.price , :precision => 2)%></td>
		    <td class="admin_action">
		    	<span style="margin-left: 15%;">
		    		<img src="/images/pencil_edit.jpg" id="edit_<%= part_price.id %>" class="edit_image" onclick="PartPrice.editEntity(<%= part_price.id %>, <%= i %>)"/>
				</span>
				<img id="spinner_edit_<%= part_price.id %>" style="display:none" src="/images/spinner.gif"/>
				<span style="margin-left: 15%;">
		    		<img src="/images/minus_red.jpg" id="delete_<%= part_price.id %>" class="edit_image" onclick="PartPrice.deleteEntity(<%= part_price.id %>)"></img>
				<img id="spinner_delete_<%= part_price.id %>" style="display:none;" src="/images/spinner.gif"/>
				</span>
		    </td>
		  </tr>
		  <% i = i + 1 %>
		  <% end %>
	  <% else %>
	  	<div class="failure" style="position: fixed; margin-top: 5%; margin-left: 20%">There are no records matching your seatch parameters.</div>
	  <% end %>
	
	</table>
</div>
		<div style="position:absolute; left: 90%; width: 6%" class="admin_action">
		<span style="float: left"><img id="spinner_search" src="/images/plus.jpg"/ onclick="PartPrice.newEntity()" class="button_image"></span>
		<span style="float: left">
		<img id="spinner_new" style="display:none" src="/images/spinner.gif"/></span></div>
<script>
	$('.sortable').attr('class' , 'sortable sort_default')
	$('[name="' + SortUtility.sort + '"]').attr('class' , 'sortable sort_' + SortUtility.order)
	if(role == 'admin')
		$(".admin_action").css('visibility','visible')
</script>
