<%= form_for(@customer) do |f| %>
  <div class="field">
    <b><label>Customer Id</label></b><br />
    <%= f.text_field :customer_id %>
  </div>
  <div class="field">
    <b><label>Name</label></b><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <b><%= f.label :contact_person %></b><br />
    <%= f.text_field :contact_person %>
  </div>
  <div class="field">
    <b><%= f.label :address %></b><br />
    <%= f.text_area :address, :class => 'medium_text_area'%>
  </div>
  <div class="field"> 
    <b><%= f.label :country %></b><br />
    <%= f.text_field :country %>
  </div>
  <div class="field"> 
    <b><%= f.label :phone %></b><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field"> 
    <b><%= f.label :fax %></b><br />
    <%= f.text_field :fax %>
  </div>
  <div class="field">
    <b><%= f.label :email %></b><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <b><%= f.label :web %></b><br />
    <%= f.text_field :web %>
  </div>
  <div class="actions">
    <%= f.submit :class => "small_button" %>
  </div>
<% end %>
