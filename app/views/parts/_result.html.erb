<table class="borderedTable">
  <tr>
    <th width="3%">S. No.</th>
    <th width="5%">Number</th>
    <th width="15%">Description</th>
    <th width="3%">Weight(Kg)</th>
    <th width="15%">Models</th>
    <th width="5%">Action</th>
  </tr>
<% i = 1 %>
<% @parts.each do |part| %>
	<% if i%2 == 0 %>
  		<tr id="<%= 'part_' + String(part.id) %>" style="background-color: #C6E2FF">
  	<% else %>
  		<tr id="<%= 'part_' + String(part.id) %>" style="background-color: #EFFBFE">
  	<% end %>
		    <td><%= i %></td>
		    <td><div id="part_<%=part.id%>_0"><%= part.number %></div></td>
		    <td><div id="part_<%=part.id%>_1"><%= part.description %></div></td>
		    <td><div id="part_<%=part.id%>_2"><%= part.weight %></div></td>
			<td><div id="part_<%=part.id%>_3"><%= part.model_parts.collect { |modelPart| modelPart.model.number }.join(', ')%></div></td>
		    <td>
		    	<span style="margin-left: 20%;">
		    		<img src="/images/edit.jpg" id="edit_<%= part.id %>" class="edit_image" onclick="Part.editEntity(<%= part.id %>)"/>
				</span>
				<img id="spinner_edit_<%= part.id %>" style="display:none" src="/images/spinner.gif"/>
				<span style="margin-left: 20%;">
		    		<img src="/images/delete.jpg" id="delete_<%= part.id %>" class="delete_image" onclick="Part.deleteEntity(<%= part.id %>)"></img>
				<img id="spinner_delete_<%= part.id %>" style="display:none;" src="/images/spinner.gif"/>
				</span>
		    </td>
	  	</tr>
  <% i = i + 1 %>
<% end %>
</table>
