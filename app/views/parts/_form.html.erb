<%= form_for(@part) do |f| %>
  <div class="field">
    <label>Part Number</label><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <label>Name</label><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description , :class => 'small_text_area'%>
  </div>
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
