<!DOCTYPE html>
<html>
<head>
  <title>Kripa</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div>
  	<% if current_user %>
    <div style="position:absolute;left:0px;bottom:0px;top:0px;width:150px;background-color: #60AFFE;">
    	<div style="width:150px"> 
	      <div class="menu"><%= link_to 'Prices', :controller => "part_prices", :action => "index"%></div>
	    </div>
    	<div style="margin-top: 5%;"> 
	      <%= link_to 'Makes', :controller => "makes", :action => "index"%><br/>
	    </div>
    	<div style="margin-top: 5%;"> 
	      <%= link_to 'Models', :controller => "models", :action => "index"%><br/>
	    </div>
    	<div style="margin-top: 5%;"> 
	      <%= link_to 'Parts', :controller => "parts", :action => "index"%><br/>
	    </div>
    	<div style="margin-top: 5%;"> 
	      <%= link_to 'Customers', :controller => "customers", :action => "index"%><br/>
	    </div>
    	<div style="margin-top: 5%;"> 
	      <%= link_to 'Log Out', :controller => "sessions", :action => "destroy"%>
		</div>
	</div>
	<div style="margin-left: 10%">
		<div id="success_msg" class="success"></div>
		<div id="failure_msg" class="failure"></div>
      <%= yield %>
    </div>
    <% else %>
      <%= render :template => "sessions/new"%>
    <% end %>
</body>
</html>
