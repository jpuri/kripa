<!DOCTYPE html>
<html>
<head>
<script src="javascripts/application.js"></script>
  <title>Kripa</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div>
  	<% if current_user %>
    <div style="font-family:Verdana;
    position:absolute;left:0px;bottom:0px;top:0px;width:150px;background-color: #60AFFE;">
    	<div class="menu_div" style="margin-top: 5%;" > 
	      <%= link_to 'Makes', :controller => "makes", :action => "index"%><br/>
	    </div>
    	<div style="margin-top: 5%;" class="menu_div"> 
	      <%= link_to 'Models', :controller => "models", :action => "index"%><br/>
	    </div>
    	<div style="margin-top: 5%;" class="menu_div"> 
	      <%= link_to 'Parts', :controller => "parts", :action => "index"%>
	    </div>
    	<div style="margin-top: 5%;" class="menu_div"> 
	      <%= link_to 'Prices', :controller => "prices", :action => "index"%>
	    </div>
    	<div style="margin-top: 5%;" class="menu_div"> 
	      <%= link_to 'Customers', :controller => "customers", :action => "index"%><br/>
	    </div>
    	<div style="margin-top: 5%;" class="menu_div"> 
	      <%= link_to 'Log Out', :controller => "sessions", :action => "destroy"%>
		</div>
	</div>
	<div style="margin-left: 25%; margin-right: 25%; font-family:Verdana">
		<div id="success_msg" class="success"></div>
		<div id="failure_msg" class="failure"></div>
		<div id = "main_div">
      		<%= yield %>
      	</div>
    </div>
    <% else %>
      <%= render :template => "sessions/new"%>
    <% end %>
</body>
</html>
